<Controls:MetroWindow x:Class="WindowsMedia.BiblioWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        Title="BiblioWindow" Height="480" Width="480" ResizeMode="NoResize">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Accents/Blue.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Accents/BaseLight.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid x:Name="BiblioWindow1" Background="#FF686868">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="11*"/>
            <RowDefinition Height="118*"/>
            <RowDefinition Height="21*"/>
        </Grid.RowDefinitions>
        <Label x:Name="LabelTitre" Content="Emplacement des bibliothèques" FontWeight="Bold" Foreground="White" VerticalContentAlignment="Center" Padding="10,5,5,5"/>
        <ListBox x:Name="ListBoxBiblio" Margin="10,0,0,0" Grid.Row="1" Background="#FFA0A0A0" ItemTemplate="{StaticResource ListBibliTemplate}"/>
        <Button x:Name="ButtonAdd" Content="Ajouter..." HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="1" Margin="0" Grid.Row="1" FontWeight="Normal" Foreground="#FF707070" Style="{DynamicResource ButtonStyleSubWindow}" VerticalContentAlignment="Center" Width="65" Padding="0" Height="25" Click="ButtonAdd_Click"/>
        <Button x:Name="ButtonDelete" Content="Supprimer" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="1" Margin="0,36,0,0" Grid.Row="1" FontWeight="Normal" Foreground="#FF707070" BorderThickness="0" Style="{DynamicResource ButtonStyleSubWindow}" Width="65" VerticalContentAlignment="Center" Padding="0" Height="25" Click="ButtonDelete_Click"/>
        <Button x:Name="ButtonOK" Content="OK" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0,20" Grid.Row="2" FontWeight="Normal" Foreground="#FF707070" Style="{DynamicResource ButtonStyleSubWindow}" VerticalContentAlignment="Center" Width="65" Padding="0" Height="25" Click="ButtonOK_Click"/>
        <Button x:Name="ButtonCancel" Content="Annuler" HorizontalAlignment="Center" VerticalAlignment="Bottom" Grid.Column="1" Margin="0,0,0,20" Grid.Row="2" FontWeight="Normal" Foreground="#FF707070" BorderThickness="0" Style="{DynamicResource ButtonStyleSubWindow}" Width="65" VerticalContentAlignment="Center" Padding="0" Height="25" RenderTransformOrigin="0.5,0.508" Click="ButtonCancel_Click"/>
    </Grid>
</Controls:MetroWindow>
